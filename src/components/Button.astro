---
const { color, text, icon, iconTitle, iconLeft, link, isFilled, isDark, ...rest } = Astro.props;
import { Icon } from 'astro-icon/components';

interface Props {
  color?: string;
  link: string;
  text: string;
  icon?: string;
  iconTitle?: string;
  iconLeft?: boolean;
  isFilled?: boolean;
  isDark?: boolean;
}
---

<a
  class:list={[
    {
      'bg-secondary text-white border-secondary hover:bg-white hover:text-secondary':
        isFilled && isDark,
    },
    {
      'bg-white text-secondary border-white':
        isFilled && !isDark,
    },
    {
      'bg-white text-secondary border-secondary hover:bg-secondary hover:text-white hover:border-secondary':
        !isFilled && isDark,
    },
    {
      'bg-white text-secondary border-secondary hover:bg-secondary hover:text-white hover:border-secondary':
        !isFilled && !isDark,
    },
  ]}
  class='flex items-center justify-center font-semibold py-2 px-3 rounded-lg border-2 duration-200'
  href={link}
  {...rest}
>
  {
    icon ? (
      <p class={`flex items-center justify-center gap-2`} >
        <Icon class:list={[{'order-2': iconLeft}]} name={icon} size={20} /> {text}
      </p>
    ) : (
      <p>{text}</p>
    )
  }
</a>
