---
import MainLayout from '../layouts/MainLayout.astro';
import { Image } from 'astro:assets';
import sabrinaBartolomei from '../assets/sabrina-bartolomei.jpeg';
import sabrinaBartolomeiRound from '../assets/sabrina-bartolomei-rounded.jpeg';
import fotoAgenzia from '../assets/foto-agenzia.jpeg';
